# Configuração do Provedor LLM
# Opções: 'openai', 'claude', 'gemini'
LLM_PROVIDER=openai

# Configurações OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2048

# Configurações Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_TEMPERATURE=0.1
CLAUDE_MAX_TOKENS=2048

# Configurações Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.1

# Configuração de Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai

# Configuração do ChromaDB - Banco separado para Código de Estrada
CHROMA_DB_PATH=./chroma_db_codigo_estrada
CHROMA_COLLECTION_NAME=codigo_estrada_documents

# Configuração de processamento de texto
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Configuração de busca
SEARCH_TYPE=mmr
SEARCH_K=8
SEARCH_FETCH_K=10
SEARCH_LAMBDA_MULT=0.6

# Configuração da API - Porta diferente para não conflitar
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=False

# CORS (separar múltiplas origens por vírgula)
# Porta diferente para o frontend do Código de Estrada
CORS_ORIGINS=http://localhost:5174,http://localhost:5175,http://localhost:3000

